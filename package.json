{
  "version": "0.0.4",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "keywords": [
    "react-scratchcard",
    "scratch-off-effect",
    "interactive-canvas",
    "react-ui-component",
    "scratch-reveal"
  ],
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "example": "cd example && yarn && yarn start",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "release": "yarn publish --access=public",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "react": ">=18"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "next-scratchcard",
  "author": "Ankit Tailor",
  "module": "dist/react-scratchcard.esm.js",
  "size-limit": [
    {
      "path": "dist/react-scratchcard.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/react-scratchcard.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.2.4",
    "@types/react": "^18.0.29",
    "@types/react-dom": "^18.0.11",
    "husky": "^8.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "size-limit": "^8.2.4",
    "tsdx": "^0.14.1",
    "tslib": "^2.5.0",
    "typescript": "^5.0.2"
  },
  "dependencies": {
    "postcss": "^8.4.29",
    "rollup-plugin-postcss": "^4.0.2"
  }
}
